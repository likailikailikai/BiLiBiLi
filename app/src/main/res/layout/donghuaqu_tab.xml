<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_huuihua_tab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_donghua_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_donghua"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/huihua9_big" />

        <TextView
            android:id="@+id/tv_donghuabiaoti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_donghua"
            android:gravity="center"
            android:text="动画区"
            android:textColor="#000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tvzhibo"
            android:gravity="center"
            android:text="进去看看"
            android:textColor="#ffffff"
            android:textSize="10dp"/>

    </RelativeLayout>
</LinearLayout>