<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_huuihua_tab"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_huuihua_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/iv_huuihua"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/huihua9_big"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/tv_huihuabiaoti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="绘画专区"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_huuihua"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="当前"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/tvzhibo" />
        <TextView
            android:id="@+id/tvzhibo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="66"
            android:textColor="#fb7299"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tvhuihua1" />
        <TextView
            android:id="@+id/tvhuihua1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个直播 "
            android:textColor="#000000"
            android:gravity="center"
            android:drawableRight="@drawable/ic_gray_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>
</LinearLayout>